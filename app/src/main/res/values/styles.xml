<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Carddemo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#1da9e1</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>


    <!-- Text for sections -->
    <style name="AppTheme.TitleText">
        <item name="android:textSize">@dimen/demo_title_section_textsize</item>
        <item name="android:layout_marginLeft">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/demo_title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/demo_title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/demo_title_section_textcolor</item>
    </style>

    <style name="AppTheme.TrademarkText">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginLeft">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/demo_title_section_margin_bottom</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++   -->

    <!-- Customize Button Overflow in Header -->
    <!--
    <style name="card.header_button_base.overflow" >
        <item name="android:background">@drawable/ic_action_arrow_bottom</item>
    </style>
    -->

    <!-- Other Button in Header -->
    <style name="card.header_button_base.other">
    </style>

    <!-- Button Base in Header on the left-->
    <style name="card.header_button_base.left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/card_header_button_padding_left</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Button Overflow in Header -->
    <style name="card.header_button_base.left.overflow" >
        <item name="android:background">@drawable/card_menu_button_overflow</item>
    </style>

    <!-- Button to Expand/Collapse in Header -->
    <style name="card.header_button_base.left.expand">
        <item name="android:background">@drawable/card_menu_button_expand</item>
    </style>

    <!-- Other Button in Header -->
    <style name="card.header_button_base.left.other">
    </style>


    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++   -->

    <!-- Customize Shadow -->
    <!--Style for shadow image-->
    <!--
    <style name="card.shadow_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:src">@drawable/democard_my_shadow</item>
        <item name="android:layout_below">@+id/card_main_content_layout</item>
    </style>
    -->

    <style name="card.shadow_my_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_below">@+id/card_main_content_layout</item>
    </style>


    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++   -->

    <!-- Myapps style -->

    <style name="carddemo_myapps_main_inner_ratingbar"  >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="carddemo_myapps_main_inner_secondarytitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="carddemo_myapps_main_inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++   -->



    <style name="carddemo_googlenow_main_inner_lastupdate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="Birth.card.content_outer_layout" parent="@style/card.content_outer_layout">
        <!--Style for Content View-->
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_content_outer_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_content_outer_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_content_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_content_outer_view_margin_right</item>
    </style>



    <style name="Now"></style>

    <style name="Now.card_expand_inner_layout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Now.card_expand_inner_layout.light_gray">
        <item name="android:background">#515254</item>
        <item name="android:textColor">#B3B2B2</item>
    </style>

    <style name="Now.card_expand_inner_layout.light_gray.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Now.card_expand_inner_layout.dark">
        <item name="android:background">#4A4B4D</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Now.card_expand_inner_layout.dark.bold" parent="@style/Now.card_expand_inner_layout.dark">
        <item name="android:textStyle">bold</item>
    </style>



    <!--You may know card -->
    <style name="carddemo_mayknow_main_inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="carddemo_mayknow_main_inner_title.sub">
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Suggested community -->

    <style name="carddemo_suggested_header_text"></style>

    <style name="carddemo_suggested_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#D0D0D0</item>
    </style>

    <style name="carddemo_suggested_text_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="carddemo_suggested_text_bold1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!-- Expand inside -->
    <style name="card.main_layout_expandinside" parent="card.main_layout">
        <item name="android:background">@drawable/card_background</item>
    </style>


    <!--Dismiss Animation -->
    <style name="card.dismiss_name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/card_main_simple_title_margin_top</item>
    </style>


    <!-- GPlay section list -->
    <style name="carddemo_section_textmore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/carddemo_section_textmore_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#98CC00</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/carddemo_section_textmore_padding_left</item>
        <item name="android:paddingTop">@dimen/carddemo_section_textmore_padding_top</item>
        <item name="android:paddingRight">@dimen/carddemo_section_textmore_padding_right</item>
        <item name="android:paddingBottom">@dimen/carddemo_section_textmore_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/carddemo_section_textmore_margin_left</item>
        <item name="android:layout_marginTop">@dimen/card_section_title_margin_top</item>
    </style>


</resources>
